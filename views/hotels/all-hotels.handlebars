<link rel="stylesheet" href="./css/style.css">

<div class="row">
    <div class="col-lg-3">
        <form class="form-wrapper" action="/hotels/all" method="GET">
            <div id="searchHotel" class="input-group add-on">
                <input class="form-control" placeholder="Search" name="search" type="text">
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                </div>
            </div>

        </form>
    </div>
</div>
{{#each hotels}}
<div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-3">
        <img class="col-lg-12" src="{{this.image}}" alt="{{this.image}}" style="padding: 10px">
    </div>
    <div class="col-lg-5">
        {{#if available}}
           <div class="pull-right">
             <strong><p class="text-success">Available</p></strong>
               </div>
               {{else}}
               <div class="pull-right">
              <strong><p class="text-danger">Booked</p></strong>
               </div>
        {{/if}}
       
        <h4>{{this.hotelName}}</h4>
         
        <i class="fa fa-map-marker" style="font-size:20px;color:red"> {{this.location}}</i>
        <p>{{this.description}}</p>

        <div class="ratings">
            <div class="empty-stars"></div>
            <div class="full-stars" style="width:{{this.stars}}"></div>
        </div>

        <input class="btn btn-primary pull-right" type="submit" value="Book now">
        <hr>
        
    </div>
    {{else}}
    <h2>No available</h2>
    

</div>

{{/each}} 


